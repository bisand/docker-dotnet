{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-build: debug",
            "type": "docker-build",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/demo/webapi/Dockerfile",
                "context": "${workspaceFolder}/demo/webapi",
                "tag": "demo-webapi:dev"
            },
            "platform": "netCore",
            // "netCore": {
            //     "appProject": "${workspaceFolder}/demo/webapi/webapi.csproj"
            // },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "docker-run",
            "label": "debug webapi",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {
                "ports": [
                    {
                        "hostPort": 5000,
                        "containerPort": 5000
                    }
                ]
            },
            "platform": "netCore",
            "netCore": {
                "appProject": "${workspaceFolder}/demo/webapi/webapi.csproj",
                "enableDebugging": true
            }
        }
    ]
}